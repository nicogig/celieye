<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="nicolagigante.celieye.activity.SegnalaProdotto"
    android:background="#607d8b">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/textfield"
        android:id="@+id/textfield"
        android:textColor="#ffffffff"
        android:maxLines="1"
        android:textCursorDrawable="@null"
        android:layout_below="@+id/barcode"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/textView" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/textfield"
        android:textCursorDrawable="@null"
        android:id="@+id/description"
        android:maxLines="1"
        android:textColor="#ffffffff"
        android:layout_below="@+id/textfield"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/textView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/textfield"
        android:maxLines="1"
        android:textCursorDrawable="@null"
        android:id="@+id/barcode"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="55dp"
        android:layout_alignParentRight="true"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send"
        android:id="@+id/button"
        android:onClick="Inviarichiesta"
        android:background="@drawable/btn_mtrl_alpha"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:enabled="false"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text=""
        android:id="@+id/output"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/barcodesegnala"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/barcode"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/output"
        android:layout_marginLeft="12dp"
        android:textColor="#ffffffff"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/namesegnala"
        android:id="@+id/textView2"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:layout_below="@+id/barcode"
        android:layout_alignLeft="@+id/textView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/descriptionsegnala"
        android:id="@+id/textView3"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:layout_below="@+id/textfield"
        android:layout_alignLeft="@+id/textView2" />

</RelativeLayout>
